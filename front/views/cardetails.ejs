                        </tr>
                        <tr>
                            <td>Exterior Color</td>
                            <td>
                                <%=ExteriorColor%>
                            </td>
                        </tr>
                        <tr>
                            <td>Transmission</td>
                            <td>
                                <%=Transmission%>
                            </td>
                        </tr>

                        <tr>
                            <td>FuelType</td>
                            <td>
                                <%=FuelType%>
                            </td>
                        </tr>

                        <tr>
                            <td>Year Bought</td>
                            <td>
                                <%=YearBought%>
                            </td>
                        </tr>

                        <tr>
                            <td>Years Used</td>
                            <td>
                                <%=YearsUsed%>
                            </td>
                        </tr>
                        <tr>
                            <td>Fuel Consumption</td>
                            <td>
                                <%=FuelConsumption%>
                            </td>
                        </tr>

                        <tr>
                            <td>Country Manufactured</td>
                            <td>
                                <%=CountryOfManufacture%>
                            </td>
                        </tr>

                        <tr>
                            <td>Service History</td>
                            <td>
                                <%=ServiceHistory%>
                            </td>
                        </tr>
                        <tr>
                            <td>Warrant</td>
                            <td>
                                <%=Warrant%>
                            </td>
                        </tr>
                        <tr>
                            <td>Other Details</td>
                            <td>
                                <%=OtherDetails%>
                            </td>
                        </tr>
                    </table>
                    </p>

                </div>
            </div>
        </div>
    </section>
