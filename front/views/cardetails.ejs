<%- include ("header.ejs") %>

    <!-- header ends here  -->

    <!-- product details section starts here  -->
    <br><br><br><br><br><br><br><br><br>
    <section class="product-details">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 my-3">
                    <div class="slider product-slider">
                        <% images.forEach((photo)=> { %>
                            <div class="item me-3">
                                <div class="slider-card">
                                    <img src="/uploads/<%=photo.Photo%>" class="img-fluid" alt="product-img" />
                                </div>
                            </div>
                            <%})%>
                    </div>
                    <div class="slider product-thumbnail mt-4">
                        <% images.forEach((photo)=> { %>
                            <div>
                                <div class="item item-sliderNav">
                                    <img src="/uploads/<%=photo.Photo%>" class="img-fluid" alt="product thumbnail" />
                                </div>
                            </div>
                            <%})%>
                    </div>
                </div>
                <div class="col-lg-6 my-3">
                    <p class="green-tag">Private Seller</p>
                    <!-- <h3>Car Details</h3> -->
                    <h5 class="regular green-text">
                        <%=RegNo%>
                    </h5>
                    <p>
                        <%=Engine%>
                    </p>
                    <div class="row">
                        <div class="col-12 my-2">
                            <p class="mb-0">
                                <%=OtherDetails%>
                            </p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xxl-6 col-xl-7 col-lg-8 col-md-6 col-sm-8">

                            <div class="row">
                                <!-- <div class="col-6 my-3"> -->
                                <div class="detail-card">
                                    <p class="green-text mb-2"> Price</p>
                                    <h3 class="regular">
                                        <%= SellingPrice !==null && SellingPrice !=='' ?
                                            SellingPrice.toLocaleString('en-US', { minimumFractionDigits: 2,
                                            maximumFractionDigits: 2 }) : '' %>
                                    </h3>
                                </div>
                                <!-- </div> -->

                            </div>
                            <div class="row">
                                <!-- <div class="col-12 my-3"> -->
                                <div class="detail-card">
                                    <!-- <p class="mb-2">Private Seller</p> -->
                                    <div class="d-flex align-items-center">
                                        <div class="flex-shrink-0 me-3">
                                            <img src="/img/call-icon.png" alt="phone icon" class="img-fluid phone-icon">
                                        </div>
                                        <div class="flex-grow-1">
                                            <h3 class="green-text regular mb-0">
                                                <a href="" style="text-decoration: none;">
                                                    <%=Phone%>
                                                </a>
                                            </h3>
                                        </div>
                                    </div>
                                    <!-- <p class="p-xs mt-2 mb-0">Seller's Number Has Been Protected.</p> -->
                                    <!-- </div> -->
                                </div>
                            </div>

                            <div class="row" style="margin-top: 3%;">
                                <!-- <div class="col-12"> -->
                                <div class="detail-card">
                                    <!-- <p class="mb-2">Private Seller</p> -->
                                    <div class="d-flex align-items-center">
                                        <div class="flex-shrink-0 me-3">
                                            <img src="/img/email-icon.png" alt="phone icon"
                                                class="img-fluid phone-icon">
                                        </div>
                                        <div class="flex-grow-1">
                                            <h3 class="green-text regular mb-0">
                                                <a href="" style="text-decoration: none;">
                                                    <%=Email%>
                                                </a>
                                            </h3>
                                        </div>
                                    </div>
                                    <!-- <p class="p-xs mt-2 mb-0">Seller's Number Has Been Protected.</p> -->
                                    <!-- </div> -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- product details section ends here  -->

    <!-- car details section starts here  -->
