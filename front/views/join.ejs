<%- include ("header.ejs") %>

    <!-- header ends here  -->

    <!-- inner banner section starts here -->
    <section class="inner-banner">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 my-3">
                    <h1>Create Account</h1>
                    <p class="grey-text"></p>
                </div>
                <div class="col-lg-6 my-3 d-lg-block d-none">
                    <img src="img/banner-sm.png" alt="banner car" class="img-fluid w-100">
                </div>
            </div>
        </div>
    </section>
    <!-- inner banner section ends here -->

    <!-- contact us section starts here -->
    <section class="contact-us">
        <div class="container">

            <form action="/register" method="post">
                <div class="row">
                    <div class="col-md-12 my-3">
                        <label class="site-label">Name <span class="red-text">*</span></label>
                        <input type="text" placeholder="Name" name="Name" class="site-input" required>
                    </div>

                    <div class="col-md-12 my-3">
                        <label class="site-label">Phone <span class="red-text">*</span></label>
                        <input type="tel" placeholder="Phone Number" name="Phone" class="site-input" required>
                    </div>

                    <div class="col-md-12 my-3">
                        <label class="site-label">Password <span class="red-text">*</span> </label>
                        <div class="password-container">
                            <input type="password" name="Password" class="site-input password-input" required>
                            <a class="toggle-password" href="#"><i class="far fa-eye"></i></a>
                        </div>
                    </div>


                    <div class="col-12 my-3">
                        <button class="site-btn" type="submit">Create Account</button>
                    </div>
                </div>
            </form>
        </div>
    </section>
    <!-- contact us section ends here -->

    <!-- footer starts here -->
    <%- include ("footer.ejs") %>