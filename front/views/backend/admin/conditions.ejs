<%- include ("../header.ejs") %>
    <%- include ("nav.ejs") %>
        <div class="main-panel">
            <div class="content-wrapper">
                <div class="row">

                    <div class="col-lg-12 grid-margin stretch-card">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">
                                    <%=title%>
                                </h4>
                                <hr>
                                <p class="card-description">
                                    <a href="/condition/addcondition" class="btn btn-primary btn-sm btn-icon-text mr-3">
                                        Add Condition
                                        <i class="typcn typcn-plus btn-icon-append"></i>
                                    </a>
                                </p>
                                <hr>
                                <% if(messages.success){%>
                                    <div class="alert alert-success" role="alert">
                                        <%= messages.success %>
                                    </div>
                                    <%}%>
                                        <% if(messages.error){%>
                                            <div class="alert
                                                        alert-danger" role="alert">
                                                <%= messages.error %>
                                            </div>
                                            <%}%>
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <table class="table table-striped project-orders-table">
                                                            <thead>
                                                                <tr>
                                                                    <th>Condition</th>
                                                                    <th></th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                <% for(var i=0; i< data.length; i++) { %>
                                                                    <tr>
                                                                        <td>
                                                                            <%= data[i].Condition%>
                                                                        </td>
                                                                        <td>
                                                                            <div class="d-flex align-items-center">
                                                                                <a type="button"
                                                                                    href="/condition/edit/<%=data[i].ConditionId%>"
                                                                                    class=" btn btn-success btn-sm btn-icon-text mr-3">
                                                                                    Edit
                                                                                    <i
                                                                                        class="typcn typcn-edit btn-icon-append"></i>
                                                                                </a>
                                                                                <a type="button"
                                                                                    class="btn btn-danger btn-sm btn-icon-text"
                                                                                    onclick="return alert('Are you sure you want to delete THIS condition?')"
                                                                                    href="/condition/delete/<%=data[i].ConditionId%>">
                                                                                    Delete
                                                                                    <i
                                                                                        class="typcn typcn-delete-outline btn-icon-append"></i>
                                                                                </a>
                                                                            </div>
                                                                        </td>
                                                                    </tr>
                                                                    <% }%>
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <%- include ("../footer.ejs") %>