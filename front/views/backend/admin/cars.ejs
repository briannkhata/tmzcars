<%- include ("../header.ejs") %>
    <%- include ("nav.ejs") %>
        <div class="main-panel">
            <div class="content-wrapper">
                <div class="row">

                    <div class="col-lg-12 grid-margin stretch-card">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">
                                    <%=title%>
                                </h4>

                                <hr>
                                <p class="card-description">
                                    <a href="/car/add" class="btn btn-primary btn-sm btn-icon-text mr-3">
                                        Add
                                        <i class="typcn typcn-plus btn-icon-append"></i>
                                    </a>
                                </p>
                                <hr>

                                <div class="row">
                                    <div class="col-md-12">
                                        <table class="table table-striped project-orders-table">
                                            <thead>
                                                <tr>
                                                    <th style="width:2%">#</th>
                                                    <th>Year</th>
                                                    <th>Car Type</th>
                                                    <th>Model</th>
                                                    <th>Make</th>
                                                    <th>Condition</th>
                                                    <th>Body</th>
                                                    <th>Date Added</th>
                                                    <th>Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% var counter=0 %>
                                                    <% for(var i=0; i< data.length; i++) { %>

                                                        <tr>
                                                            <td>
                                                                <%= ++counter %>
                                                            </td>
                                                            <td>
                                                                <%= data[i].Year%>
                                                            </td>
                                                            <td>
                                                                <%= data[i].CarTypeId%>
                                                            </td>

                                                            <td>
                                                                <%= data[i].ModelId%>
                                                            </td>
                                                            <td>
                                                                <%= data[i].MakeId%>
                                                            </td>

                                                            <td>
                                                                <%= data[i].ConditionId%>
                                                            </td>


                                                            <td>
                                                                <%= data[i].BodyId%>
                                                            </td>


                                                            <td>
                                                                <%=new
                                                                    Date(data[i].DateAdded).toLocaleDateString('en-US',
                                                                    { day: 'numeric' , month: 'long' , year: 'numeric'
                                                                    }) %>
                                                            </td>

                                                            <td>
                                                                <div class="d-flex align-items-center">
                                                                    <a type="button" href="/car/edit/<%=data[i].CarId%>"
                                                                        class=" btn btn-success btn-sm btn-icon-text mr-3">
                                                                        Edit
                                                                        <i class="typcn typcn-edit btn-icon-append"></i>
                                                                    </a>

                                                                    <a type="button"
                                                                        href="/car/images/<%=data[i].CarId%>"
                                                                        class=" btn btn-primary btn-sm btn-icon-text mr-3">
                                                                        Details
                                                                        <i class="typcn typcn-eye btn-icon-append"></i>
                                                                    </a>
                                                                    <a type="button"
                                                                        class="btn btn-danger btn-sm btn-icon-text"
                                                                        onclick="return alert('Are you sure you want to delete THIS CAR BODY?')"
                                                                        href="/car/delete/<%=data[i].CarId%>">
                                                                        Delete
                                                                        <i
                                                                            class="typcn typcn-delete-outline btn-icon-append"></i>
                                                                    </a>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                        <%}%>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <!-- content-wrapper ends -->
            <!-- partial:../../partials/_footer.html -->
            <%- include ("../footer.ejs") %>