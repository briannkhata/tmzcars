<%- include ("../header.ejs") %>
    <%- include ("nav.ejs") %>


        <div class="main-panel">
            <div class="content-wrapper">
                <div class="row">


                    <div class="col-12 grid-margin stretch-card">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">
                                    <%=title%>
                                </h4>
                                <hr>
                                <p>

                                    <% if(messages.success){%>
                                        <div class="alert alert-success" role="alert">
                                            <%= messages.success %>
                                        </div>
                                        <%}%>
                                            <% if(messages.error){%>
                                                <div class="alert
                                                            alert-danger" role="alert">
                                                    <%= messages.error %>
                                                </div>
                                                <%}%>
                                </p>
                                <form class="forms-sample" action="/user/saveid" method="post">
                                    <div class="form-group">
                                        <label for="exampleInputName1">Name</label>
                                        <input type="text" class="form-control" value="<%=name%>" placeholder="Name"
                                            readonly>
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputName1">Id Number</label>
                                        <input type="text" name="IdNumber" class="form-control" value="<%=idnumber%>">
                                    </div>

                                    <div class="form-group">
                                        <label for="exampleInputName1">Id Type</label>
                                        <select class="form-control" name="IdType">
                                            <option>Option</option>
                                            <% idtypes.forEach((idtype)=> { %>
                                                <option value="<%= idtype.IdType %>" <% if (idtype.IdType===idtypee) {
                                                    %>selected<% } %>>
                                                        <%= idtype.IdType %>
                                                </option>
                                                <% }); %>

                                        </select>
                                    </div>

                                    <input type="hidden" name="id" value="<%=id%>">
                                    <button type="submit" class="btn
                                                                    btn-primary
                                                                    mr-2">Save</button>
                                </form>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <%- include ("../footer.ejs") %>