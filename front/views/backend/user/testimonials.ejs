<%- include ("../header.ejs") %>
    <%- include ("nav.ejs") %>
        <div class="main-panel">
            <div class="content-wrapper">
                <div class="row">

                    <div class="col-lg-12 grid-margin stretch-card">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">
                                    <%=title%>
                                </h4>
                                <hr>
                                <p class="card-description">
                                    <a href="/testimonial/add" class="btn btn-primary btn-sm btn-icon-text mr-3">
                                        Add
                                        <i class="typcn typcn-plus btn-icon-append"></i>
                                    </a>
                                </p>
                                <hr>
                                <div class="row">
                                    <div class="col-md-12">
                                        <table class="table table-striped project-orders-table">
                                            <thead>
                                                <tr>
                                                    <th style="width: 2%;">#</th>
                                                    <th>Testimonial</th>
                                                    <th>User</th>
                                                    <th>Role</th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% var counter=0 %>
                                                    <% for(var i=0; i< data.length; i++) { %>

                                                        <tr>
                                                            <td>
                                                                <%= ++counter %>
                                                            </td>
                                                            <td>
                                                                <%= data[i].Testimonial%>
                                                            </td>
                                                            <td>
                                                                <%= data[i].User.Name%>
                                                            </td>
                                                            <td>
                                                                <%= data[i].Role%>
                                                            </td>
                                                            <td>
                                                                <div class="d-flex align-items-center">
                                                                    <a type="button"
                                                                        href="/testimonial/edit/<%=data[i].TestimonialId%>"
                                                                        class=" btn btn-success btn-sm btn-icon-text mr-3">
                                                                        Edit
                                                                        <i class="typcn typcn-edit btn-icon-append"></i>
                                                                    </a>
                                                                    <a type="button"
                                                                        class="btn btn-danger btn-sm btn-icon-text"
                                                                        onclick="return alert('Are you sure you want to delete THIS TESTIMONIAL?')"
                                                                        href="/testimonial/delete/<%=data[i].TestimonialId%>">
                                                                        Delete
                                                                        <i
                                                                            class="typcn typcn-delete-outline btn-icon-append"></i>
                                                                    </a>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                        <%}%>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <%- include ("../footer.ejs") %>